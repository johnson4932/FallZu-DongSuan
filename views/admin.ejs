<!DOCTYPE HTML>
<html>
    <% include head %>
    <body>
        <div id="doc">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Voting system</a>
                    </div><!-- end .navbar-header -->
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <%= Account %> -
                                <%= Name %>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a data-toggle="modal" href="#createVoteModal">Create Vote</a></li>
                                <li><a data-toggle="modal" href="#createGroupModal">Create Group</a></li>
                                <li><a href="#">Add Candidate</a></li>
                                <li><a data-toggle="modal" href="#createAdminModal">Add Admin</a></li>
                                <li><a href="#">Modify Profile</a></li>
                                <li><a href="/logout">Logout</a></li>
                            </ul><!-- end .dropdown-menu -->
                        </li><!-- end .dropdown -->
                    </ul><!-- end .navbar-nav -->
                </div><!-- end .container -->
            </div><!-- end .navbar -->
            <div class="container">
                <% include createVoteModal %>
                <% include createGroupModal %>
                <% include createAdminModal %>
                <div id="alertMessage" class="alert alert-success"></div><!-- end .alertMessage -->

                <table class="table">
                    <thead>
                        <tr>
                            <th>VoteDate</th>
                            <th>VoteName</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var key in Result) { %>
                        <tr class="VoteList<%= Result[key].VID %>">
                            <td><%= Result[key].VoteDate %></td>
                            <td><a href="/vote/<%= Result[key].VID %>"><%= Result[key].VoteName %></a></td>
                            <td><button class="resetVote btn btn-info">Reset</button></td>
                            <td><button class="modifyVote btn btn-primary">Modify</button></td>
                            <td><button class="exportVote btn btn-success">Export</button></td>
                            <td><button class="deleteVote btn btn-danger">Delete</button></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div><!-- end .container -->
        </div><!-- end #doc -->
        <script src="/public/js/admin.js"></script>
    </body>
</html>
