<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <title>Voting system</title>
        <link href="/public/css/reset.css" rel="stylesheet" media="screen">
        <link href="/public/css/bootstrap.min.css" rel="stylesheet" media="screen">
        <link href="/public/css/style.css" rel="stylesheet" media="screen">
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="/public/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div id="doc">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Voting system</a>
                    </div><!-- end .navbar-header -->
                </div><!-- end .container -->
            </div><!-- end .navbar -->
            <div id="login" class="container">
                <form method="post" action="/login">
                    <h2>Login</h2>
                    <input type="text" class="form-control" name="account" placeholder="Account" autofocus>
                    <input type="password" class="form-control" name="passwd" placeholder="Password"><br>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                </form><br>
                <% if (true == Err) { %>
                <div class="alert alert-danger">Login Fail</div>
                <% } %>
            </div><!-- end .container -->
        </div><!-- end #doc -->
    </body>
</html>
